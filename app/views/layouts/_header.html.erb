<div id="menubar">
	<span id="menu_logo_text">Rails Tutorial by zs</span>
	<div id="menu">
		<%= link_to "Home", root_path %> |
		<% if signed_in? %>
		<%= link_to "Profile", current_user %> |
		<% end %>
		<%= link_to "About", about_path %> |
		<%= link_to "Contact", contact_path %> |
		<%= link_to "Help", help_path %> |
		<% if signed_in? %>
		<strong><%= link_to "Sign out", signout_path, :method => :delete %></strong>
		<% else %>
		<strong><%= link_to "Sign in", signin_path %></strong>
		<% end %>
	</div>
</div>
<div class="h_shadow">
	<%= image_tag "../stylesheets/comedy/img/shadow_horizontal.png", :width => "100%", :height => 40, :alt => "shadow" %>
</div>

